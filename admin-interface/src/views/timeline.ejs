<%- include('partials/header', { title: 'Activity Timeline' , pagePath: '/timeline' }) %>

    <!-- Activity Timeline Page Content -->
    <div class="space-y-6" x-data="timelinePage()">

        <!-- Page Header -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div>
                <h2 class="text-2xl font-display font-bold text-navy-900">Activity Timeline</h2>
                <p class="text-gray-600 mt-1">Comprehensive view of all system activities</p>
            </div>
            <div class="flex gap-2">
                <select class="form-select" x-model="filter" @change="loadTimeline()">
                    <option value="">All Events</option>
                    <option value="USER_REGISTERED">New Users</option>
                    <option value="TRANSACTION_COMPLETED">Transactions</option>
                    <option value="KYC_UPDATE">KYC Updates</option>
                    <option value="WIRE_TRANSFER">Wire Transfers</option>
                    <option value="ADMIN_LOGIN">Admin Logins</option>
                </select>
                <button class="btn-ghost" @click="loadTimeline()">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Today's Summary -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="stat-card">
                <div class="stat-label">Today's Events</div>
                <div class="stat-value" x-text="todaySummary.totalEvents || 0"></div>
            </div>
            <div class="stat-card">
                <div class="stat-label">New Users</div>
                <div class="stat-value text-emerald-600" x-text="todaySummary.eventsByType?.USER_REGISTERED || 0"></div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Transactions</div>
                <div class="stat-value text-blue-600"
                    x-text="(todaySummary.eventsByType?.TRANSACTION_COMPLETED || 0) + (todaySummary.eventsByType?.TRANSACTION_FAILED || 0)">
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Admin Actions</div>
                <div class="stat-value text-gold-600" x-text="todaySummary.eventsByType?.ADMIN_ACTION || 0"></div>
            </div>
        </div>

        <!-- Timeline -->
        <div class="card">
            <div class="card-header flex items-center justify-between">
                <h3 class="text-lg font-semibold text-navy-900">Recent Activity</h3>
                <span class="text-sm text-gray-500" x-text="`${events.length} events`"></span>
            </div>
            <div class="card-body p-0">
                <!-- Timeline List -->
                <div class="flow-root">
                    <ul role="list" class="-mb-8">
                        <template x-for="(event, index) in events" :key="event.id">
                            <li>
                                <div class="relative pb-8">
                                    <!-- Connecting line -->
                                    <span x-show="index !== events.length - 1"
                                        class="absolute left-5 top-5 -ml-px h-full w-0.5 bg-gray-200"></span>

                                    <div
                                        class="relative flex items-start space-x-4 px-6 py-4 hover:bg-gray-50 transition-colors">
                                        <!-- Icon -->
                                        <div class="relative">
                                            <div class="w-10 h-10 rounded-full flex items-center justify-center" :class="{
                                                 'bg-emerald-100 text-emerald-600': event.iconColor === 'emerald',
                                                 'bg-ruby-100 text-ruby-600': event.iconColor === 'ruby',
                                                 'bg-amber-100 text-amber-600': event.iconColor === 'amber',
                                                 'bg-blue-100 text-blue-600': event.iconColor === 'blue',
                                                 'bg-gray-100 text-gray-600': event.iconColor === 'gray',
                                                 'bg-gold-100 text-gold-600': event.iconColor === 'gold'
                                             }">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                            </div>
                                        </div>

                                        <!-- Content -->
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center justify-between">
                                                <p class="text-sm font-medium text-navy-900" x-text="event.title"></p>
                                                <span class="text-xs text-gray-500" x-text="event.relativeTime"></span>
                                            </div>
                                            <p class="text-sm text-gray-600 mt-1" x-text="event.description"></p>

                                            <!-- Actor info -->
                                            <div class="mt-2 flex items-center gap-4 text-xs text-gray-500"
                                                x-show="event.actor">
                                                <span class="flex items-center gap-1">
                                                    <svg class="w-3 h-3" fill="none" stroke="currentColor"
                                                        viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                                    </svg>
                                                    <span x-text="event.actor?.name"></span>
                                                </span>
                                                <span class="text-gray-400" x-text="event.formattedTime"></span>
                                            </div>
                                        </div>

                                        <!-- Type badge -->
                                        <div class="flex-shrink-0">
                                            <span class="badge badge-info text-xs"
                                                x-text="formatEventType(event.type)"></span>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </template>
                    </ul>
                </div>

                <!-- Empty State -->
                <div class="text-center py-12" x-show="events.length === 0 && !loading">
                    <svg class="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <p class="mt-4 text-gray-600">No events found</p>
                </div>

                <!-- Load More -->
                <div class="px-6 py-4 bg-gray-50 text-center" x-show="events.length > 0">
                    <button class="btn-ghost btn-sm" @click="loadMore()">
                        Load More Events
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function timelinePage() {
            return {
                events: [],
                todaySummary: {},
                filter: '',
                loading: false,
                limit: 50,

                async init() {
                    await this.loadTimeline();
                    await this.loadTodaySummary();
                },

                async loadTimeline() {
                    this.loading = true;
                    try {
                        const params = new URLSearchParams({ limit: this.limit });
                        if (this.filter) params.append('types', this.filter);

                        const response = await fetch(`/api/extended/timeline?${params}`);
                        const result = await response.json();

                        if (result.success) {
                            this.events = result.data;
                        }
                    } catch (error) {
                        console.error('Failed to load timeline:', error);
                    } finally {
                        this.loading = false;
                    }
                },

                async loadTodaySummary() {
                    try {
                        const response = await fetch('/api/extended/timeline/today');
                        const result = await response.json();

                        if (result.success) {
                            this.todaySummary = result.data;
                        }
                    } catch (error) {
                        console.error('Failed to load today summary:', error);
                    }
                },

                async loadMore() {
                    this.limit += 50;
                    await this.loadTimeline();
                },

                formatEventType(type) {
                    return type
                        .replace(/_/g, ' ')
                        .toLowerCase()
                        .split(' ')
                        .map(word => word.charAt(0).toUpperCase() + word.slice(1))
                        .join(' ');
                }
            };
        }
    </script>

    <%- include('partials/footer') %>