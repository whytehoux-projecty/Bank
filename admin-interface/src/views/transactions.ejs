<%- include('partials/header', { title: 'Transaction Management' , pagePath: '/transactions' }) %>

  <div x-data="transactionManagement()">
    <!-- Header & actions -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
      <div>
        <!-- Title via layout -->
      </div>
      <div class="flex gap-2">
        <button @click="openCreateModal()" class="btn btn-primary group">
          <svg class="w-5 h-5 mr-2 -ml-1 transition-transform group-hover:rotate-90" fill="none" stroke="currentColor"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          New Transaction
        </button>
        <button @click="exportTransactions()" class="btn btn-secondary flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          </svg>
          Export CSV
        </button>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Transactions -->
      <div class="stat-card border-l-4 border-gold-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="stat-label mb-1">Total Transactions</p>
            <h3 class="stat-value" x-text="stats.total">0</h3>
          </div>
          <div class="h-12 w-12 rounded-full bg-gold-100 flex items-center justify-center text-gold-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Total Deposits -->
      <div class="stat-card border-l-4 border-emerald-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="stat-label mb-1">Total Deposits</p>
            <h3 class="stat-value text-xl" x-text="formatCurrency(stats.deposits)">$0.00</h3>
          </div>
          <div class="h-12 w-12 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6">
              </path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Total Withdrawals -->
      <div class="stat-card border-l-4 border-ruby-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="stat-label mb-1">Total Withdrawals</p>
            <h3 class="stat-value text-xl" x-text="formatCurrency(stats.withdrawals)">$0.00</h3>
          </div>
          <div class="h-12 w-12 rounded-full bg-ruby-100 flex items-center justify-center text-ruby-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6">
              </path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Pending -->
      <div class="stat-card border-l-4 border-amber-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="stat-label mb-1">Pending</p>
            <h3 class="stat-value" x-text="stats.pending">0</h3>
          </div>
          <div class="h-12 w-12 rounded-full bg-amber-100 flex items-center justify-center text-amber-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters & Search -->
    <div class="card p-6 mb-8">
      <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
        <div class="md:col-span-3 relative">
          <input type="text" x-model="filters.search" @input.debounce.500ms="fetchTransactions()"
            placeholder="Search transactions..." class="form-input pl-10">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>
        <div class="md:col-span-2">
          <select x-model="filters.type" @change="fetchTransactions()" class="form-select w-full">
            <option value="">All Types</option>
            <option value="DEPOSIT">Deposit</option>
            <option value="WITHDRAWAL">Withdrawal</option>
            <option value="TRANSFER">Transfer</option>
            <option value="PAYMENT">Payment</option>
          </select>
        </div>
        <div class="md:col-span-2">
          <select x-model="filters.status" @change="fetchTransactions()" class="form-select w-full">
            <option value="">All Status</option>
            <option value="PENDING">Pending</option>
            <option value="COMPLETED">Completed</option>
            <option value="FAILED">Failed</option>
            <option value="CANCELLED">Cancelled</option>
          </select>
        </div>
        <div class="md:col-span-4 grid grid-cols-2 gap-2">
          <input type="date" x-model="filters.dateFrom" @change="fetchTransactions()" class="form-input">
          <input type="date" x-model="filters.dateTo" @change="fetchTransactions()" class="form-input">
        </div>
        <div class="md:col-span-1">
          <button @click="resetFilters()" class="btn btn-ghost w-full py-3" title="Reset Filters">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
              </path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Transactions Table -->
    <div class="card overflow-hidden">
      <div class="overflow-x-auto">
        <table class="table w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Date</th>
              <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Type</th>
              <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">From</th>
              <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">To</th>
              <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Amount</th>
              <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left pl-10">Status</th>
              <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <template x-if="loading">
              <tr>
                <td colspan="7" class="px-6 py-12 text-center">
                  <div class="flex justify-center">
                    <div class="spinner"></div>
                  </div>
                  <p class="mt-2 text-sm text-gray-500">Loading transactions...</p>
                </td>
              </tr>
            </template>

            <template x-if="!loading && transactions.length === 0">
              <tr>
                <td colspan="7" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center justify-center text-gray-400">
                    <svg class="h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <p class="text-lg font-medium text-gray-900">No transactions found</p>
                  </div>
                </td>
              </tr>
            </template>

            <template x-for="txn in transactions" :key="txn.id">
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900" x-text="formatDate(txn.createdAt)"></div>
                  <div class="text-xs text-gray-500 font-mono" x-text="txn.id.substring(0,8) + '...'"></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span
                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700"
                    x-text="txn.type"></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
                  <span x-text="txn.fromAccount ? txn.fromAccount.accountNumber : 'N/A'"></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
                  <span x-text="txn.toAccount ? txn.toAccount.accountNumber : 'N/A'"></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <span class="text-sm font-bold font-mono"
                    :class="{'text-emerald-600': txn.type === 'DEPOSIT', 'text-ruby-600': txn.type === 'WITHDRAWAL', 'text-navy-900': txn.type === 'TRANSFER'}"
                    x-text="(txn.type === 'DEPOSIT' ? '+' : '-') + formatCurrency(txn.amount)">
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap pl-10">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium" :class="{
                                            'bg-emerald-100 text-emerald-800': txn.status === 'COMPLETED',
                                            'bg-amber-100 text-amber-800': txn.status === 'PENDING',
                                            'bg-ruby-100 text-ruby-800': txn.status === 'FAILED',
                                            'bg-gray-100 text-gray-800': txn.status === 'CANCELLED'
                                          }" x-text="txn.status">
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end gap-2">
                    <button @click="viewTransaction(txn)" class="text-gray-400 hover:text-navy-900 transition-colors"
                      title="View Details">
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                        </path>
                      </svg>
                    </button>

                    <template x-if="txn.status === 'PENDING'">
                      <div class="flex gap-2">
                        <button @click="approveTransaction(txn)"
                          class="text-emerald-400 hover:text-emerald-600 transition-colors" title="Approve">
                          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7">
                            </path>
                          </svg>
                        </button>
                        <button @click="rejectTransaction(txn)"
                          class="text-ruby-400 hover:text-ruby-600 transition-colors" title="Reject">
                          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M6 18L18 6M6 6l12 12"></path>
                          </svg>
                        </button>
                      </div>
                    </template>
                  </div>
                </td>
              </tr>
            </template>
          </tbody>
        </table>
      </div>

      <!-- Pagination (Mock) -->
      <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-between">
        <span class="text-sm text-gray-500">Showing <span class="font-medium" x-text="transactions.length"></span>
          results</span>
        <div class="flex gap-2">
          <button class="btn btn-sm btn-ghost" disabled>Previous</button>
          <button class="btn btn-sm btn-ghost" disabled>Next</button>
        </div>
      </div>
    </div>

    <!-- Create Transaction Modal -->
    <div x-show="showCreateModal" class="modal-overlay" style="display: none;">
      <div class="modal">
        <div class="modal-content" @click.away="closeCreateModal()">
          <div class="modal-header flex justify-between items-center">
            <h3 class="text-xl font-display font-bold text-navy-900">New Transaction</h3>
            <button @click="closeCreateModal()" class="text-gray-400 hover:text-gray-500">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <div class="modal-body space-y-4">
            <div>
              <label class="form-label">Type</label>
              <select x-model="formData.type" class="form-select w-full">
                <option value="DEPOSIT">Deposit</option>
                <option value="WITHDRAWAL">Withdrawal</option>
                <option value="TRANSFER">Transfer</option>
              </select>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="form-label">From Account (ID)</label>
                <input type="text" x-model="formData.fromAccountId" class="form-input">
              </div>
              <div>
                <label class="form-label">To Account (ID)</label>
                <input type="text" x-model="formData.toAccountId" class="form-input">
              </div>
            </div>
            <div>
              <label class="form-label">Amount</label>
              <input type="number" x-model="formData.amount" class="form-input">
            </div>
            <div>
              <label class="form-label">Description</label>
              <input type="text" x-model="formData.description" class="form-input">
            </div>
          </div>
          <div class="modal-footer">
            <button @click="closeCreateModal()" class="btn btn-ghost">Cancel</button>
            <button @click="saveTransaction()" class="btn btn-primary">Create</button>
          </div>
        </div>
      </div>
    </div>

  </div>

  <script>
    document.addEventListener('alpine:init', () => {
      Alpine.data('transactionManagement', () => ({
        transactions: [],
        loading: true,
        stats: { total: 0, deposits: 0, withdrawals: 0, pending: 0 },
        filters: { search: '', type: '', status: '', dateFrom: '', dateTo: '' },
        showCreateModal: false,
        formData: { type: 'DEPOSIT', fromAccountId: '', toAccountId: '', amount: 0, description: '' },

        init() {
          this.fetchTransactions();
        },

        async fetchTransactions() {
          this.loading = true;
          try {
            const params = new URLSearchParams();
            if (this.filters.search) params.append('search', this.filters.search);
            if (this.filters.type) params.append('type', this.filters.type);
            if (this.filters.status) params.append('status', this.filters.status);

            const response = await fetch('/api/transactions?' + params.toString());
            const data = await response.json();

            this.transactions = data.transactions || [];

            // Calculate stats
            this.stats.total = this.transactions.length;
            this.stats.pending = this.transactions.filter(t => t.status === 'PENDING').length;

            this.stats.deposits = this.transactions
              .filter(t => t.type === 'DEPOSIT')
              .reduce((sum, t) => sum + parseFloat(t.amount), 0);

            this.stats.withdrawals = this.transactions
              .filter(t => t.type === 'WITHDRAWAL')
              .reduce((sum, t) => sum + parseFloat(t.amount), 0);

          } catch (error) {
            console.error('Error fetching transactions:', error);
          } finally {
            this.loading = false;
          }
        },

        formatDate(dateString) {
          if (!dateString) return 'N/A';
          return new Date(dateString).toLocaleDateString();
        },

        formatCurrency(value) {
          return new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: 'USD'
          }).format(value || 0);
        },

        resetFilters() {
          this.filters = { search: '', type: '', status: '', dateFrom: '', dateTo: '' };
          this.fetchTransactions();
        },

        openCreateModal() {
          this.formData = { type: 'DEPOSIT', fromAccountId: '', toAccountId: '', amount: 0, description: '' };
          this.showCreateModal = true;
        },

        closeCreateModal() {
          this.showCreateModal = false;
        },

        async saveTransaction() {
          alert('Create transaction logic here: ' + JSON.stringify(this.formData));
          this.closeCreateModal();
        },

        viewTransaction(txn) {
          alert('Viewing transaction ' + txn.id);
        },

        async approveTransaction(txn) {
          if (confirm('Approve transaction ' + txn.id + '?')) {
            // API call
            alert('Approving...');
          }
        },

        async rejectTransaction(txn) {
          if (confirm('Reject transaction ' + txn.id + '?')) {
            // API call
            alert('Rejecting...');
          }
        },

        exportTransactions() {
          window.open('/api/transactions/export', '_blank');
        }
      }));
    });
  </script>

  <%- include('partials/footer') %>