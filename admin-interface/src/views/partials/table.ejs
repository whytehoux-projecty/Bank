<% // Expected locals: // - headerHtml: string (The <th> elements)
    // - rowHtml: string (The <td> elements template)
        // - loopVar: string (Alpine x-for expression, e.g. "user in users")
        // - keyVar: string (Alpine :key expression, e.g. "user.id")
        // - loadingVar: string (Alpine variable for loading state)
        // - emptyCheck: string (Alpine expression for empty state)
        // - colCount: number (For colspan in loading/empty states)
        // - emptyMessage: string (Text to display when empty)
        %>
        <div class="overflow-x-auto">
            <table class="table w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <%- headerHtml %>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <!-- Loading State -->
                    <template x-if="<%= loadingVar %>">
                        <tr>
                            <td colspan="<%= colCount %>" class="px-6 py-12 text-center">
                                <div class="flex justify-center">
                                    <div class="spinner"></div>
                                </div>
                                <p class="mt-2 text-sm text-gray-500">Loading data...</p>
                            </td>
                        </tr>
                    </template>

                    <!-- Empty State -->
                    <template x-if="<%= emptyCheck %>">
                        <tr>
                            <td colspan="<%= colCount %>" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center text-gray-400">
                                    <svg class="h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z">
                                        </path>
                                    </svg>
                                    <p class="text-lg font-medium text-gray-900">
                                        <%= emptyMessage %>
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </template>

                    <!-- Data Rows -->
                    <template x-for="<%= loopVar %>" :key="<%= keyVar %>">
                        <tr class="hover:bg-gray-50 transition-colors">
                            <%- rowHtml %>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>