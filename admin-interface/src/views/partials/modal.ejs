<% // Expected locals: // - showVar: string (Alpine variable for x-show, e.g. 'showModal' ) // - closeFunc: string
    (Alpine function to close, e.g. 'closeModal()' ) // - titleExpr: string (Alpine expression for title) // - maxWidth:
    string (optional, e.g. 'max-w-4xl' ) // - body: string (HTML content for body) // - footer: string (HTML content for
    footer) %>
    <div x-show="<%= showVar %>" class="modal-overlay" style="display: none;" x-transition.opacity>
        <div class="modal">
            <div class="modal-content <%= locals.maxWidth || '' %>" @click.away="<%= closeFunc %>">
                <div class="modal-header flex justify-between items-center">
                    <h3 class="text-xl font-display font-bold text-navy-900" x-text="<%= titleExpr %>"></h3>
                    <button @click="<%= closeFunc %>" class="text-gray-400 hover:text-gray-500">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <div class="modal-body space-y-4">
                    <%- body %>
                </div>

                <div class="modal-footer">
                    <%- footer %>
                </div>
            </div>
        </div>
    </div>