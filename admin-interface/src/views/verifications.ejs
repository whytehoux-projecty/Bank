<%- include('layout', { body: ` <div x-data="verificationsManagement()">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
        <div>
            <!-- Title via layout -->
        </div>
        <div class="flex gap-2">
            <button @click="loadVerifications()" class="btn btn-ghost text-gray-500 hover:text-navy-900"
                title="Refresh">
                <svg class="w-5 h-5 animate-spin-reverse" :class="{'animate-spin': loading}" fill="none"
                    stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                    </path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Pending Verifications Card -->
    <div class="card overflow-hidden">
        <div class="card-header bg-white border-b border-gray-100 py-4 px-6 flex items-center justify-between">
            <h3 class="text-base font-bold text-navy-900 flex items-center">
                <span class="flex h-2 w-2 relative mr-3">
                    <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-2 w-2 bg-amber-500"></span>
                </span>
                Pending Payment Verifications
            </h3>
            <span class="text-xs font-semibold px-2 py-1 bg-gray-100 rounded-full text-gray-600"
                x-text="verifications.length + ' Pending'"></span>
        </div>

        <div class="overflow-x-auto">
            <table class="table w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Date
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">User
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                            Reference</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Amount
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left pl-8">
                            Document</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">
                            Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <template x-if="loading">
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <div class="flex justify-center">
                                    <div class="spinner"></div>
                                </div>
                                <p class="mt-2 text-sm text-gray-500">Loading verifications...</p>
                            </td>
                        </tr>
                    </template>

                    <template x-if="!loading && verifications.length === 0">
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center text-gray-400">
                                    <svg class="h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <p class="text-lg font-medium text-gray-900">No pending verifications</p>
                                    <p class="text-sm">Great job! All payments processed.</p>
                                </div>
                            </td>
                        </tr>
                    </template>

                    <template x-for="v in verifications" :key="v.id">
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"
                                x-text="new Date(v.createdAt).toLocaleString()"></td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex flex-col">
                                    <span class="text-sm font-semibold text-navy-900"
                                        x-text="v.transaction.account.user.firstName + ' ' + v.transaction.account.user.lastName"></span>
                                    <span class="text-xs text-gray-500"
                                        x-text="v.transaction.account.user.email"></span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <code class="text-xs font-mono bg-gray-100 px-2 py-1 rounded text-navy-600"
                                    x-text="v.transaction.reference"></code>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <span class="text-sm font-bold text-ruby-600 font-mono"
                                    x-text="'-' + formatCurrency(Math.abs(v.transaction.amount), v.transaction.currency)"></span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap pl-8">
                                <span
                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"
                                    x-text="v.documentType"></span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button @click="openReview(v)" class="btn btn-sm btn-primary">Review</button>
                            </td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Review Modal -->
    <div x-show="showModal" class="modal-overlay" style="display: none;">
        <div class="modal">
            <div class="modal-content max-w-4xl" @click.away="closeModal()">
                <div class="modal-header flex justify-between items-center bg-navy-900 text-white rounded-t-xl">
                    <h3 class="text-xl font-display font-bold">Review Payment</h3>
                    <button @click="closeModal()" class="text-gray-400 hover:text-white">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <div class="modal-body p-0">
                    <div class="grid grid-cols-1 md:grid-cols-2 h-[500px]">
                        <!-- Left: Transaction Details -->
                        <div class="p-6 border-r border-gray-100 bg-gray-50 overflow-y-auto">
                            <h4 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-4">Transaction
                                Details</h4>
                            <template x-if="selectedVerification">
                                <div class="space-y-4">
                                    <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
                                        <div class="text-sm text-gray-500">Amount</div>
                                        <div class="text-3xl font-bold text-ruby-600 font-mono"
                                            x-text="formatCurrency(Math.abs(selectedVerification.transaction.amount), selectedVerification.transaction.currency)">
                                        </div>
                                    </div>

                                    <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 space-y-3">
                                        <div>
                                            <div class="text-xs text-gray-500 uppercase">Customer</div>
                                            <div class="font-medium text-navy-900"
                                                x-text="selectedVerification.transaction.account.user.firstName + ' ' + selectedVerification.transaction.account.user.lastName">
                                            </div>
                                            <div class="text-xs text-gray-500"
                                                x-text="selectedVerification.transaction.account.user.email"></div>
                                        </div>
                                        <div>
                                            <div class="text-xs text-gray-500 uppercase">Account</div>
                                            <div class="font-mono text-sm text-navy-900"
                                                x-text="selectedVerification.transaction.account.accountNumber"></div>
                                        </div>
                                        <div>
                                            <div class="text-xs text-gray-500 uppercase">Reference</div>
                                            <div class="font-mono text-sm text-navy-900"
                                                x-text="selectedVerification.transaction.reference"></div>
                                        </div>
                                        <div>
                                            <div class="text-xs text-gray-500 uppercase">Description</div>
                                            <div class="text-sm text-navy-900 italic"
                                                x-text="selectedVerification.transaction.description"></div>
                                        </div>
                                    </div>

                                    <div>
                                        <label class="form-label">Admin Notes</label>
                                        <textarea x-model="reviewNotes" class="form-input" rows="3"
                                            placeholder="Add notes for approval/rejection..."></textarea>
                                    </div>
                                </div>
                            </template>
                        </div>

                        <!-- Right: Document Preview -->
                        <div class="p-6 bg-navy-900/5 flex flex-col">
                            <h4 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-4">Supporting
                                Document</h4>
                            <div
                                class="flex-1 bg-white border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center p-4">
                                <template x-if="selectedVerification">
                                    <div class="text-center">
                                        <div
                                            class="h-20 w-20 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-3 text-red-500">
                                            <svg class="w-10 h-10" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z">
                                                </path>
                                            </svg>
                                        </div>
                                        <p class="font-medium text-gray-900 mb-1"
                                            x-text="selectedVerification.documentType"></p>
                                        <p class="text-xs text-gray-500 mb-4 font-mono truncate max-w-[200px]"
                                            x-text="selectedVerification.documentPath.split('/').pop()"></p>

                                        <a href="#" class="btn btn-sm btn-outline-primary"
                                            @click.prevent="alert('Document download demo')">
                                            Download Document
                                        </a>
                                    </div>
                                </template>
                            </div>
                        </div>
                    </div>
                </div>
                <div
                    class="modal-footer bg-gray-50 flex justify-between items-center rounded-b-xl border-t border-gray-200 p-4">
                    <button @click="closeModal()" class="btn btn-ghost">Cancel</button>
                    <div class="flex gap-2">
                        <button @click="submitReview('REJECT')" class="btn btn-danger" :disabled="processing">
                            <span x-show="processing" class="spinner w-4 h-4 mr-2 border-white"></span>
                            Reject Payment
                        </button>
                        <button @click="submitReview('APPROVE')" class="btn btn-success" :disabled="processing">
                            <span x-show="processing" class="spinner w-4 h-4 mr-2 border-white"></span>
                            Approve Payment
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('verificationsManagement', () => ({
                verifications: [],
                loading: true,
                showModal: false,
                selectedVerification: null,
                reviewNotes: '',
                processing: false,

                init() {
                    this.loadVerifications();
                },

                async loadVerifications() {
                    this.loading = true;
                    try {
                        const res = await fetch('/api/verifications');
                        const result = await res.json();
                        if (result.success) {
                            this.verifications = result.data || [];
                        }
                    } catch (error) {
                        console.error('Error fetching verifications:', error);
                    } finally {
                        this.loading = false;
                    }
                },

                openReview(verification) {
                    this.selectedVerification = verification;
                    this.reviewNotes = '';
                    this.showModal = true;
                },

                closeModal() {
                    this.showModal = false;
                    this.selectedVerification = null;
                },

                formatCurrency(amount, currency) {
                    return new Intl.NumberFormat('en-US', { style: 'currency', currency: currency || 'USD' }).format(amount);
                },

                async submitReview(action) {
                    if (!this.selectedVerification) return;
                    if (!confirm(`Are you sure you want to ${action} this payment?`)) return;
                    
                    this.processing = true;
                    const endpoint = action === 'APPROVE' ? 'approve' : 'reject';
                    
                    try {
                        const res = await fetch(`/api/verifications/${this.selectedVerification.id}/${endpoint}`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ notes: this.reviewNotes })
                        });
                        
                        const result = await res.json();
                        if (res.ok) {
                            alert('Processed successfully');
                            this.closeModal();
                            this.loadVerifications();
                        } else {
                            alert('Error: ' + result.message);
                        }
                    } catch (error) {
                        alert('Failed to process request');
                    } finally {
                        this.processing = false;
                    }
                }
            }));
        });
    </script>
    ` }) %>