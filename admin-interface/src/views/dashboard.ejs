        <!-- Chart.js CDN -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <script>
            // Dashboard Stats & Logic
            document.addEventListener('alpine:init', () => {
                Alpine.data('dashboardStats', (serverStats) => ({
                    stats: {
                        totalUsers: '0',
                        totalAccounts: '0',
                        totalTransactions: '0',
                        pendingKyc: '0'
                    },
                    init() {
                        // Initialize with data from server-side rendering
                        if (serverStats) {
                            this.mapStats(serverStats);
                        }

                        // Then fetch updates
                        this.fetchStats();
                        setInterval(() => this.fetchStats(), 30000); // Refresh every 30s
                    },
                    mapStats(data) {
                        // Handle nested structure from API/Controller
                        this.stats = {
                            totalUsers: data.users?.total || data.totalUsers || '0',
                            totalAccounts: data.accounts?.total || data.totalAccounts || '0',
                            totalTransactions: data.transactions?.total || data.totalTransactions || '0',
                            pendingKyc: data.users?.pendingKYC || data.pendingKyc || '0'
                        };
                    },
                    async fetchStats() {
                        try {
                            const response = await fetch('/api/admin/dashboard/stats');
                            if (response.ok) {
                                const data = await response.json();
                                this.mapStats(data);

                                // Update Chart if it exists
                                if (window.transactionChart) {
                                    // Simulate updating chart data with random variance for demo
                                    const newData = [65, 59, 80, 81, 56, 55, 40].map(v => v + Math.floor(Math.random() * 10));
                                    window.transactionChart.data.datasets[0].data = newData;
                                    window.transactionChart.update();
                                }
                            }
                        } catch (error) {
                            console.error('Error fetching stats:', error);
                        }
                    }
                }));
            });

            // Initialize Chart
            document.addEventListener('DOMContentLoaded', function () {
                const ctx = document.getElementById('transactionChart');
                if (ctx) {
                    window.transactionChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                            datasets: [{
                                label: 'Transaction Volume',
                                data: [65, 59, 80, 81, 56, 55, 40],
                                fill: true,
                                borderColor: '#D4AF37', // Gold 500
                                backgroundColor: 'rgba(212, 175, 55, 0.1)',
                                tension: 0.4,
                                borderWidth: 2,
                                pointBackgroundColor: '#fff',
                                pointBorderColor: '#D4AF37',
                                pointRadius: 4
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false
                                },
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: '#f3f4f6'
                                    },
                                    ticks: {
                                        font: {
                                            family: "'Inter', sans-serif",
                                            size: 11
                                        },
                                        color: '#6b7280'
                                    }
                                },
                                x: {
                                    grid: {
                                        display: false
                                    },
                                    ticks: {
                                        font: {
                                            family: "'Inter', sans-serif",
                                            size: 11
                                        },
                                        color: '#6b7280'
                                    }
                                }
                            },
                            interaction: {
                                intersect: false,
                                mode: 'index',
                            },
                        }
                    });
                }
            });
        </script>
