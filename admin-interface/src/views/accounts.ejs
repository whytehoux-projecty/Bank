<%- include('partials/header', { title: 'Account Management' , pagePath: '/accounts' }) %>

  <div x-data="accountManagement()">
    <!-- Header & actions -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
      <div>
        <!-- Title via layout -->
      </div>
      <button @click="openCreateModal()" class="btn btn-primary group">
        <svg class="w-5 h-5 mr-2 -ml-1 transition-transform group-hover:rotate-90" fill="none" stroke="currentColor"
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Create Account
      </button>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Accounts -->
      <div class="stat-card border-l-4 border-gold-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="stat-label mb-1">Total Accounts</p>
            <h3 class="stat-value" x-text="stats.total">0</h3>
          </div>
          <div class="h-12 w-12 rounded-full bg-gold-100 flex items-center justify-center text-gold-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Active Accounts -->
      <div class="stat-card border-l-4 border-emerald-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="stat-label mb-1">Active Accounts</p>
            <h3 class="stat-value" x-text="stats.active">0</h3>
          </div>
          <div class="h-12 w-12 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Total Balance -->
      <div class="stat-card border-l-4 border-navy-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="stat-label mb-1">Total Balance</p>
            <h3 class="stat-value text-xl lg:text-2xl" x-text="formatCurrency(stats.totalBalance)">$0.00</h3>
          </div>
          <div class="h-12 w-12 rounded-full bg-navy-100 flex items-center justify-center text-navy-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
              </path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Average Balance -->
      <div class="stat-card border-l-4 border-blue-500">
        <div class="flex items-center justify-between">
          <div>
            <p class="stat-label mb-1">Avg Balance</p>
            <h3 class="stat-value text-xl lg:text-2xl" x-text="formatCurrency(stats.avgBalance)">$0.00</h3>
          </div>
          <div class="h-12 w-12 rounded-full bg-blue-100 flex items-center justify-center text-blue-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters & Search -->
    <div class="card p-6 mb-8">
      <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
        <div class="md:col-span-3 relative">
          <input type="text" x-model="filters.search" @input.debounce.500ms="fetchAccounts()"
            placeholder="Search accounts..." class="form-input pl-10">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>
        <div class="md:col-span-2">
          <select x-model="filters.type" @change="fetchAccounts()" class="form-select w-full">
            <option value="">All Types</option>
            <option value="CHECKING">Checking</option>
            <option value="SAVINGS">Savings</option>
            <option value="BUSINESS">Business</option>
          </select>
        </div>
        <div class="md:col-span-2">
          <select x-model="filters.status" @change="fetchAccounts()" class="form-select w-full">
            <option value="">All Status</option>
            <option value="ACTIVE">Active</option>
            <option value="INACTIVE">Inactive</option>
            <option value="FROZEN">Frozen</option>
            <option value="CLOSED">Closed</option>
          </select>
        </div>
        <div class="md:col-span-4 grid grid-cols-2 gap-2">
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <input type="number" x-model="filters.minBalance" placeholder="Min" class="form-input pl-7">
          </div>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <input type="number" x-model="filters.maxBalance" placeholder="Max" class="form-input pl-7">
          </div>
        </div>
        <div class="md:col-span-1">
          <button @click="resetFilters()" class="btn btn-ghost w-full py-3" title="Reset Filters">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
              </path>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Accounts Table -->
    <div class="card overflow-hidden">
      <%- include('partials/table', { loadingVar: 'loading' , emptyCheck: '!loading && accounts.length === 0' ,
        emptyMessage: 'No accounts found' , colCount: 6, loopVar: 'account in accounts' , keyVar: 'account.id' ,
        headerHtml: ` <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Account
        Details</th>
        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Holder</th>
        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Type</th>
        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Balance</th>
        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left pl-10">Status</th>
        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">Actions</th>
        `,
        rowHtml: `
        <td class="px-6 py-4 whitespace-nowrap">
          <div class="flex items-center">
            <div class="h-8 w-8 rounded bg-navy-50 text-navy-600 flex items-center justify-center mr-3">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z">
                </path>
              </svg>
            </div>
            <div>
              <span class="font-mono text-sm font-medium text-navy-900" x-text="account.accountNumber"></span>
              <div class="text-xs text-gray-500" x-text="'Created: ' + formatDate(account.createdAt)"></div>
            </div>
          </div>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">
          <div class="text-sm font-medium text-gray-900"
            x-text="account.user ? (account.user.firstName + ' ' + account.user.lastName) : 'N/A'"></div>
          <div class="text-xs text-gray-500" x-text="account.user ? account.user.email : ''"></div>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">
          <span class="text-sm text-gray-700" x-text="account.accountType"></span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-right">
          <span class="text-sm font-bold font-mono text-navy-900" x-text="formatCurrency(account.balance)"></span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap pl-10">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium" :class="{
                                          'bg-emerald-100 text-emerald-800': account.status === 'ACTIVE',
                                          'bg-gray-100 text-gray-800': account.status === 'CLOSED',
                                          'bg-amber-100 text-amber-800': account.status === 'FROZEN',
                                          'bg-ruby-100 text-ruby-800': account.status === 'INACTIVE'
                                        }" x-text="account.status">
          </span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
          <div class="flex justify-end gap-2">
            <button @click="viewAccount(account)" class="text-gray-400 hover:text-navy-900 transition-colors"
              title="View Details">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z">
                </path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                </path>
              </svg>
            </button>
            <button @click="editAccount(account)" class="text-gray-400 hover:text-gold-600 transition-colors"
              title="Edit Account">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                </path>
              </svg>
            </button>
            <a :href="'/transactions?account=' + account.id" class="text-gray-400 hover:text-blue-600 transition-colors"
              title="View Transactions">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2">
                </path>
              </svg>
            </a>
          </div>
        </td>
        `
        }) %>
    </div>


    <!-- Create/Edit Account Modal -->
    <div x-show="showModal" class="fixed inset-0 z-50 overflow-y-auto" style="display: none;" x-transition.opacity>
      <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 transition-opacity bg-gray-500 bg-opacity-75" @click="closeModal()"></div>

        <div
          class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
          <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-xl font-display font-bold text-navy-900"
                x-text="modalMode === 'create' ? 'Create New Account' : 'Edit Account'"></h3>
              <button @click="closeModal()" class="text-gray-400 hover:text-gray-500">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>

            <div class="space-y-4">
              <div>
                <label class="form-label">Account Holder (User ID)</label>
                <input type="text" x-model="formData.userId" class="form-input" placeholder="Enter User ID">
              </div>
              <div>
                <label class="form-label">Account Type</label>
                <select x-model="formData.type" class="form-select w-full">
                  <option value="CHECKING">Checking</option>
                  <option value="SAVINGS">Savings</option>
                  <option value="BUSINESS">Business</option>
                </select>
              </div>
              <div>
                <label class="form-label">Initial Balance</label>
                <input type="number" x-model="formData.balance" class="form-input">
              </div>
              <div>
                <label class="form-label">Status</label>
                <select x-model="formData.status" class="form-select w-full">
                  <option value="ACTIVE">Active</option>
                  <option value="INACTIVE">Inactive</option>
                  <option value="FROZEN">Frozen</option>
                </select>
              </div>
              <div>
                <label class="form-label">Currency</label>
                <select x-model="formData.currency" class="form-select w-full">
                  <option value="USD">USD</option>
                  <option value="EUR">EUR</option>
                  <option value="GBP">GBP</option>
                </select>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
            <button @click="saveAccount()" class="btn btn-primary ml-3">Save Account</button>
            <button @click="closeModal()" class="btn btn-ghost">Cancel</button>
          </div>
        </div>
      </div>
    </div>


  </div>

  <script>
    document.addEventListener('alpine:init', () => {
      Alpine.data('accountManagement', () => ({
        accounts: [],
        loading: true,
        stats: { total: 0, active: 0, totalBalance: 0, avgBalance: 0 },
        filters: { search: '', type: '', status: '', minBalance: '', maxBalance: '' },
        showModal: false,
        modalMode: 'create',
        formData: { userId: '', type: 'CHECKING', balance: 0, status: 'ACTIVE', currency: 'USD' },

        init() {
          this.fetchAccounts();
        },

        async fetchAccounts() {
          this.loading = true;
          try {
            const params = new URLSearchParams();
            if (this.filters.search) params.append('search', this.filters.search);
            if (this.filters.type) params.append('type', this.filters.type);
            if (this.filters.status) params.append('status', this.filters.status);

            const response = await fetch('/api/accounts?' + params.toString());
            const data = await response.json();

            this.accounts = data.accounts || [];

            // Calculate stats
            this.stats.total = this.accounts.length;
            this.stats.active = this.accounts.filter(a => a.status === 'ACTIVE').length;
            const balances = this.accounts.map(a => parseFloat(a.balance));
            this.stats.totalBalance = balances.reduce((a, b) => a + b, 0);
            this.stats.avgBalance = this.stats.total > 0 ? this.stats.totalBalance / this.stats.total : 0;

          } catch (error) {
            console.error('Error fetching accounts:', error);
          } finally {
            this.loading = false;
          }
        },

        formatDate(dateString) {
          if (!dateString) return 'N/A';
          return new Date(dateString).toLocaleDateString();
        },

        formatCurrency(value) {
          return new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: 'USD'
          }).format(value || 0);
        },

        resetFilters() {
          this.filters = { search: '', type: '', status: '', minBalance: '', maxBalance: '' };
          this.fetchAccounts();
        },

        openCreateModal() {
          this.modalMode = 'create';
          this.formData = { userId: '', type: 'CHECKING', balance: 0, status: 'ACTIVE', currency: 'USD' };
          this.showModal = true;
        },

        editAccount(account) {
          this.modalMode = 'edit';
          this.formData = { ...account, userId: account.userId || '' };
          this.showModal = true;
        },

        closeModal() {
          this.showModal = false;
        },

        async saveAccount() {
          // Implement save logic here
          alert('Save functionality would connect to API here: ' + JSON.stringify(this.formData));
          this.closeModal();
        },

        viewAccount(account) {
          alert('Viewing account details coming soon');
        }
      }));
    });
  </script>

  <%- include('partials/footer') %>