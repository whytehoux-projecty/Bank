# ============================================
# AURUM VAULT CORE API - Environment Configuration
# ============================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/aurumvault"

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT Secret - MUST be changed in production (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# JWT Token Expiration (e.g., 1h, 24h, 7d)
JWT_EXPIRES_IN="24h"

# Cookie Secret - MUST be changed in production
# Generate with: openssl rand -base64 32
COOKIE_SECRET="your-cookie-secret-change-in-production"

# ============================================
# REDIS CONFIGURATION
# ============================================
# Redis connection URL for caching and sessions
REDIS_URL="redis://localhost:6379"

# Skip Redis in development (optional)
# SKIP_REDIS=true

# Force Redis usage in development (optional)
# USE_REDIS=true

# ============================================
# SERVER CONFIGURATION
# ============================================
# Server port
PORT=3001

# Environment (development, test, staging, production)
NODE_ENV=development

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed CORS origins (comma-separated for multiple)
# Development
CORS_ORIGIN="http://localhost:3000,http://localhost:4000"

# Production example:
# CORS_ORIGIN="https://app.aurumvault.com,https://admin.aurumvault.com"

# ============================================
# RATE LIMITING
# ============================================
# Maximum requests per time window
RATE_LIMIT_MAX=100

# Time window in milliseconds (900000 = 15 minutes)
RATE_LIMIT_WINDOW=900000

# ============================================
# LOGGING
# ============================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# ERROR MONITORING (Optional)
# ============================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# SMTP Configuration for sending emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Email sender
# EMAIL_FROM="Aurum Vault <noreply@aurumvault.com>"

# ============================================
# FILE UPLOAD CONFIGURATION (Optional)
# ============================================
# Maximum file size in bytes (10MB default)
# MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
# ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"

# Upload directory
# UPLOAD_DIR=./uploads

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
# AWS Configuration (for S3 file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=aurumvault-uploads

# Stripe Configuration (for payments)
# STRIPE_SECRET_KEY=sk_test_your-stripe-key
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Enable/disable features
# ENABLE_WIRE_TRANSFERS=true
# ENABLE_LOANS=true
# ENABLE_BILLS=true
# ENABLE_KYC=true

# ============================================
# DEVELOPMENT TOOLS (Optional)
# ============================================
# Enable Swagger documentation
# ENABLE_SWAGGER=true

# Enable request logging
# ENABLE_REQUEST_LOGGING=true

# ============================================
# SECURITY HEADERS (Optional)
# ============================================
# Content Security Policy
# CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline'"

# ============================================
# PRODUCTION CHECKLIST
# ============================================
# Before deploying to production, ensure:
# ✅ JWT_SECRET is changed to a strong random value
# ✅ COOKIE_SECRET is changed to a strong random value
# ✅ DATABASE_URL points to production database
# ✅ REDIS_URL points to production Redis instance
# ✅ CORS_ORIGIN is set to production domain(s)
# ✅ NODE_ENV is set to "production"
# ✅ All secrets are stored securely (not in code)
# ✅ HTTPS is enforced
# ✅ Error monitoring (Sentry) is configured
# ✅ Email service is configured
# ✅ Backups are configured
# ============================================