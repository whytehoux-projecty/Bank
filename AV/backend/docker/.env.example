# Aurum Vault Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
DB_PASSWORD=secure_password_123
DATABASE_URL=postgresql://aurumvault_admin:secure_password_123@localhost:5432/aurumvault

# Redis Configuration
REDIS_PASSWORD=redis_secure_123
REDIS_URL=redis://:redis_secure_123@localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=your_cookie_secret_here_make_it_long_and_secure

# Session Configuration
SESSION_SECRET=your_session_secret_here_make_it_long_and_secure

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ADMIN_CORS_ORIGIN=http://localhost:3001

# pgAdmin Configuration
PGADMIN_PASSWORD=admin_password_123

# Encryption Configuration
ENCRYPTION_KEY=your_encryption_key_here_32_characters_long

# External Services
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

DWOLLA_KEY=your_dwolla_key
DWOLLA_SECRET=your_dwolla_secret
DWOLLA_ENV=sandbox

SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@aurumvault.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Business Rules
MIN_TRANSFER_AMOUNT=1
MAX_TRANSFER_AMOUNT=50000
DAILY_TRANSFER_LIMIT=100000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Development
NODE_ENV=development
DEBUG=aurumvault:*