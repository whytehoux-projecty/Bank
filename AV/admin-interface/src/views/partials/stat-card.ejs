<% /* Expected locals: - title: string - valueExpr: string (AlpineJS expression for x-text) - color: 'gold' | 'emerald'
    | 'amber' | 'ruby' | 'blue' | 'navy' - icon: string (SVG content) - descriptionHtml: string (optional, e.g. trend
    indicator) */ %>
    <div class="card p-6 border-l-4 border-<%= color %>-500 hover:-translate-y-1 transition-transform duration-300">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">
                    <%= title %>
                </p>
                <h3 class="text-2xl font-bold text-navy-900" x-text="<%= valueExpr %>">0</h3>
                <% if (locals.descriptionHtml) { %>
                    <div class="mt-1">
                        <%- descriptionHtml %>
                    </div>
                    <% } %>
            </div>
            <div
                class="h-12 w-12 rounded-full bg-<%= color %>-100 flex items-center justify-center text-<%= color %>-600">
                <%- icon %>
            </div>
        </div>
    </div>