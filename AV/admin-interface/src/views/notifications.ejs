<%- include('partials/header', { title: 'Notifications' , pagePath: '/notifications' }) %>

    <!-- Notifications Page Content -->
    <div class="space-y-6" x-data="notificationsPage()">

        <!-- Page Header -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div>
                <h2 class="text-2xl font-display font-bold text-navy-900">Notifications</h2>
                <p class="text-gray-600 mt-1">Stay updated with important system alerts and notifications</p>
            </div>
            <div class="flex gap-2">
                <button class="btn-ghost" @click="markAllRead()" x-show="unreadCount > 0">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Mark All Read
                </button>
                <select class="form-select" x-model="filter" @change="loadNotifications()">
                    <option value="">All Notifications</option>
                    <option value="unread">Unread Only</option>
                </select>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="stat-card">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                        </svg>
                    </div>
                    <div>
                        <p class="stat-label">Total Notifications</p>
                        <p class="stat-value" x-text="notifications.length"></p>
                    </div>
                </div>
            </div>
            <div class="stat-card">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-lg bg-amber-100 flex items-center justify-center">
                        <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                    <div>
                        <p class="stat-label">Unread</p>
                        <p class="stat-value text-amber-600" x-text="unreadCount"></p>
                    </div>
                </div>
            </div>
            <div class="stat-card">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-lg bg-ruby-100 flex items-center justify-center">
                        <svg class="w-6 h-6 text-ruby-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="stat-label">Alerts</p>
                        <p class="stat-value text-ruby-600" x-text="alertCount"></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notifications List -->
        <div class="card">
            <div class="card-body p-0">
                <template x-for="notification in notifications" :key="notification.id">
                    <div class="flex items-start gap-4 p-4 border-b border-gray-100 hover:bg-gray-50 transition-colors"
                        :class="{ 'bg-gold-50': !notification.read }">
                        <!-- Icon -->
                        <div class="flex-shrink-0">
                            <div class="w-10 h-10 rounded-full flex items-center justify-center" :class="{
                                 'bg-emerald-100 text-emerald-600': notification.severity === 'success',
                                 'bg-ruby-100 text-ruby-600': notification.severity === 'error',
                                 'bg-amber-100 text-amber-600': notification.severity === 'warning',
                                 'bg-blue-100 text-blue-600': notification.severity === 'info'
                             }">
                                <svg x-show="notification.severity === 'success'" class="w-5 h-5" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M5 13l4 4L19 7" />
                                </svg>
                                <svg x-show="notification.severity === 'error'" class="w-5 h-5" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                <svg x-show="notification.severity === 'warning'" class="w-5 h-5" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                                <svg x-show="notification.severity === 'info'" class="w-5 h-5" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between">
                                <p class="text-sm font-semibold text-navy-900" x-text="notification.title"></p>
                                <span class="text-xs text-gray-500" x-text="formatTime(notification.createdAt)"></span>
                            </div>
                            <p class="text-sm text-gray-600 mt-1" x-text="notification.message"></p>
                            <div class="mt-2 flex items-center gap-4">
                                <a x-show="notification.actionUrl" :href="notification.actionUrl"
                                    class="text-sm text-gold-600 hover:text-gold-700 font-medium">
                                    View Details â†’
                                </a>
                                <button x-show="!notification.read" @click="markAsRead(notification.id)"
                                    class="text-sm text-gray-500 hover:text-gray-700">
                                    Mark as read
                                </button>
                            </div>
                        </div>

                        <!-- Delete Button -->
                        <button @click="deleteNotification(notification.id)"
                            class="text-gray-400 hover:text-ruby-600 transition-colors p-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                </template>

                <!-- Empty State -->
                <div class="text-center py-12" x-show="notifications.length === 0">
                    <svg class="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                    </svg>
                    <p class="mt-4 text-gray-600">No notifications</p>
                    <p class="text-sm text-gray-500">You're all caught up!</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function notificationsPage() {
            return {
                notifications: [],
                unreadCount: 0,
                alertCount: 0,
                filter: '',

                async init() {
                    await this.loadNotifications();
                },

                async loadNotifications() {
                    try {
                        const params = new URLSearchParams();
                        if (this.filter === 'unread') params.append('unreadOnly', 'true');

                        const response = await fetch(`/api/extended/notifications?${params}`);
                        const result = await response.json();

                        if (result.success) {
                            this.notifications = result.data.notifications;
                            this.unreadCount = result.data.unreadCount;
                            this.alertCount = this.notifications.filter(n =>
                                n.severity === 'error' || n.severity === 'warning'
                            ).length;
                        }
                    } catch (error) {
                        console.error('Failed to load notifications:', error);
                    }
                },

                async markAsRead(id) {
                    try {
                        await fetch(`/api/extended/notifications/${id}/read`, { method: 'PATCH' });
                        await this.loadNotifications();
                    } catch (error) {
                        console.error('Failed to mark as read:', error);
                    }
                },

                async markAllRead() {
                    try {
                        await fetch('/api/extended/notifications/read-all', { method: 'POST' });
                        await this.loadNotifications();
                    } catch (error) {
                        console.error('Failed to mark all as read:', error);
                    }
                },

                async deleteNotification(id) {
                    try {
                        await fetch(`/api/extended/notifications/${id}`, { method: 'DELETE' });
                        await this.loadNotifications();
                    } catch (error) {
                        console.error('Failed to delete notification:', error);
                    }
                },

                formatTime(timestamp) {
                    const date = new Date(timestamp);
                    const now = new Date();
                    const diff = now - date;

                    if (diff < 60000) return 'Just now';
                    if (diff < 3600000) return `${Math.floor(diff / 60000)}m ago`;
                    if (diff < 86400000) return `${Math.floor(diff / 3600000)}h ago`;
                    return date.toLocaleDateString();
                }
            };
        }
    </script>

    <%- include('partials/footer') %>