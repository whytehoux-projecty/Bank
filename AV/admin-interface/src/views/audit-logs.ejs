<%- include('layout', { body: ` <div x-data="auditLogsManagement()">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
        <div>
            <p class="text-gray-500 mt-1">Complete system activity audit trail</p>
        </div>
        <div class="flex gap-2">
            <button @click="loadLogs()" class="btn btn-ghost text-gray-500 hover:text-navy-900" title="Refresh">
                <svg class="w-5 h-5" :class="{'animate-spin': loading}" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                    </path>
                </svg>
            </button>
            <button @click="exportLogs()" class="btn btn-outline-primary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                    </path>
                </svg>
                Export
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="card p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
            <div class="md:col-span-4 relative">
                <input type="text" x-model="filters.search" @input.debounce.500ms="loadLogs()"
                    placeholder="Search by admin or action..." class="form-input pl-10">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            <div class="md:col-span-3">
                <select x-model="filters.action" @change="loadLogs()" class="form-select w-full">
                    <option value="">All Actions</option>
                    <option value="CREATE">Create</option>
                    <option value="UPDATE">Update</option>
                    <option value="DELETE">Delete</option>
                    <option value="LOGIN">Login</option>
                    <option value="LOGOUT">Logout</option>
                </select>
            </div>
            <div class="md:col-span-3">
                <select x-model="filters.entity" @change="loadLogs()" class="form-select w-full">
                    <option value="">All Entities</option>
                    <option value="USER">User</option>
                    <option value="ACCOUNT">Account</option>
                    <option value="TRANSACTION">Transaction</option>
                    <option value="SETTINGS">Settings</option>
                </select>
            </div>
            <div class="md:col-span-2">
                <button @click="resetFilters()" class="btn btn-ghost w-full" title="Reset Filters">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                        </path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Audit Logs Table -->
    <div class="card overflow-hidden">
        <div class="overflow-x-auto">
            <table class="table w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                            Timestamp</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Admin
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Action
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Entity
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">IP
                            Address</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Changes
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">
                            Details</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <template x-if="loading">
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center">
                                <div class="flex justify-center">
                                    <div class="spinner"></div>
                                </div>
                                <p class="mt-2 text-sm text-gray-500">Loading audit logs...</p>
                            </td>
                        </tr>
                    </template>

                    <template x-if="!loading && logs.length === 0">
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center text-gray-400">
                                    <svg class="h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                                        </path>
                                    </svg>
                                    <p class="text-lg font-medium text-gray-900">No audit logs found</p>
                                    <p class="text-sm">Try adjusting your search or filters</p>
                                </div>
                            </td>
                        </tr>
                    </template>

                    <template x-for="log in logs" :key="log.id">
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900" x-text="new Date(log.createdAt).toLocaleString()">
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-semibold text-navy-900"
                                    x-text="log.adminUser?.firstName + ' ' + log.adminUser?.lastName"></div>
                                <div class="text-xs text-gray-500" x-text="log.adminUser?.email"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                    :class="{
                                    'bg-emerald-100 text-emerald-800': log.action === 'CREATE',
                                    'bg-blue-100 text-blue-800': log.action === 'UPDATE',
                                    'bg-ruby-100 text-ruby-800': log.action === 'DELETE',
                                    'bg-gray-100 text-gray-800': log.action === 'LOGIN' || log.action === 'LOGOUT'
                                }" x-text="log.action"></span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-gray-900" x-text="log.entityType"></span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-mono text-gray-500" x-text="log.ipAddress || 'N/A'"></span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-xs text-gray-600 max-w-xs truncate"
                                    x-text="formatChanges(log.details)"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button @click="viewDetails(log)"
                                    class="text-gray-400 hover:text-navy-900 transition-colors" title="View JSON">
                                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14">
                                        </path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Details Modal -->
    <div x-show="showModal" class="modal-overlay" style="display: none;">
        <div class="modal">
            <div class="modal-content max-w-2xl" @click.away="closeModal()">
                <div class="modal-header flex justify-between items-center">
                    <h3 class="text-xl font-display font-bold text-navy-900">Audit Log Details</h3>
                    <button @click="closeModal()" class="text-gray-400 hover:text-gray-500">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <div class="modal-body">
                    <pre class="bg-gray-50 p-4 rounded text-xs overflow-auto max-h-96" x-text="selectedDetails"></pre>
                </div>
                <div class="modal-footer">
                    <button @click="closeModal()" class="btn btn-ghost">Close</button>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('auditLogsManagement', () => ({
                logs: [],
                loading: true,
                filters: { search: '', action: '', entity: '' },
                showModal: false,
                selectedDetails: '',

                init() {
                    this.loadLogs();
                },

                async loadLogs() {
                    this.loading = true;
                    try {
                        const params = new URLSearchParams();
                        if (this.filters.search) params.append('search', this.filters.search);
                        if (this.filters.action) params.append('action', this.filters.action);
                        if (this.filters.entity) params.append('entityType', this.filters.entity);

                        const response = await fetch('/api/audit-logs?' + params.toString());
                        if (!response.ok) throw new Error('Failed to fetch');

                        const data = await response.json();
                        this.logs = data.logs || [];
                    } catch (error) {
                        console.error('Error fetching audit logs:', error);
                        // Mock data for demo
                        this.logs = [
                            {
                                id: '1',
                                action: 'UPDATE',
                                entityType: 'USER',
                                adminUser: { firstName: 'Admin', lastName: 'User', email: 'admin@aurumvault.com' },
                                ipAddress: '192.168.1.1',
                                details: JSON.stringify({ field: 'status', old: 'PENDING', new: 'APPROVED' }),
                                createdAt: new Date().toISOString()
                            }
                        ];
                    } finally {
                        this.loading = false;
                    }
                },

                formatChanges(details) {
                    try {
                        const parsed = JSON.parse(details || '{}');
                        return Object.keys(parsed).slice(0, 2).join(', ') + '...';
                    } catch {
                        return 'View details';
                    }
                },

                viewDetails(log) {
                    try {
                        const parsed = JSON.parse(log.details || '{}');
                        this.selectedDetails = JSON.stringify(parsed, null, 2);
                    } catch {
                        this.selectedDetails = log.details || 'No details available';
                    }
                    this.showModal = true;
                },

                closeModal() {
                    this.showModal = false;
                },

                resetFilters() {
                    this.filters = { search: '', action: '', entity: '' };
                    this.loadLogs();
                },

                exportLogs() {
                    alert('Export functionality would download CSV/JSON of filtered logs');
                }
            }));
        });
    </script>
    ` }) %>