<%- include('layout', { body: ` <div x-data="userProfile()">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
        <div>
            <p class="text-gray-500 mt-1">Manage your account settings and security</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Profile Information -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Personal Info Card -->
            <div class="card p-6">
                <h3 class="text-lg font-display font-semibold text-navy-900 mb-6 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Personal Information
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="form-label">First Name</label>
                        <input type="text" x-model="profile.firstName" class="form-input">
                    </div>
                    <div>
                        <label class="form-label">Last Name</label>
                        <input type="text" x-model="profile.lastName" class="form-input">
                    </div>
                    <div class="md:col-span-2">
                        <label class="form-label">Email Address</label>
                        <input type="email" x-model="profile.email" class="form-input">
                    </div>
                    <div class="md:col-span-2">
                        <label class="form-label">Phone Number</label>
                        <input type="tel" x-model="profile.phoneNumber" class="form-input"
                            placeholder="+1 (555) 000-0000">
                    </div>
                </div>

                <div class="mt-6 flex justify-end gap-3">
                    <button @click="resetProfile()" class="btn btn-ghost">Cancel</button>
                    <button @click="saveProfile()" class="btn btn-primary" :disabled="saving">
                        <span x-show="saving" class="spinner w-4 h-4 mr-2 border-white"></span>
                        <span x-show="!saving">Save Changes</span>
                    </button>
                </div>
            </div>

            <!-- Security Card -->
            <div class="card p-6">
                <h3 class="text-lg font-display font-semibold text-navy-900 mb-6 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-gold-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                        </path>
                    </svg>
                    Change Password
                </h3>

                <div class="space-y-4">
                    <div>
                        <label class="form-label">Current Password</label>
                        <input type="password" x-model="password.current" class="form-input"
                            autocomplete="current-password">
                    </div>
                    <div>
                        <label class="form-label">New Password</label>
                        <input type="password" x-model="password.new" class="form-input" autocomplete="new-password">
                    </div>
                    <div>
                        <label class="form-label">Confirm New Password</label>
                        <input type="password" x-model="password.confirm" class="form-input"
                            autocomplete="new-password">
                    </div>
                </div>

                <div class="mt-6 flex justify-end gap-3">
                    <button @click="resetPassword()" class="btn btn-ghost">Cancel</button>
                    <button @click="changePassword()" class="btn btn-primary" :disabled="changingPassword">
                        <span x-show="changingPassword" class="spinner w-4 h-4 mr-2 border-white"></span>
                        <span x-show="!changingPassword">Update Password</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Profile Summary -->
            <div class="card p-6 text-center">
                <div
                    class="h-24 w-24 mx-auto rounded-full bg-navy-900 text-gold-500 flex items-center justify-center font-bold text-3xl mb-4 border-4 border-gold-500">
                    <span x-text="getInitials()"></span>
                </div>
                <h3 class="text-lg font-bold text-navy-900" x-text="profile.firstName + ' ' + profile.lastName"></h3>
                <p class="text-sm text-gray-500" x-text="profile.email"></p>
                <div class="mt-4">
                    <span
                        class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gold-100 text-gold-800"
                        x-text="profile.role || 'Admin'"></span>
                </div>
            </div>

            <!-- Activity Summary -->
            <div class="card p-6">
                <h4 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-4">Account Activity</h4>
                <div class="space-y-3">
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-600">Last Login</span>
                        <span class="text-sm font-medium text-navy-900" x-text="formatDate(profile.lastLogin)"></span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-600">Account Created</span>
                        <span class="text-sm font-medium text-navy-900" x-text="formatDate(profile.createdAt)"></span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-600">Total Sessions</span>
                        <span class="text-sm font-medium text-navy-900">127</span>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card p-6">
                <h4 class="text-sm font-bold text-gray-500 uppercase tracking-wider mb-4">Quick Actions</h4>
                <div class="space-y-2">
                    <button class="btn btn-outline-primary w-full justify-start">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                            </path>
                        </svg>
                        Enable 2FA
                    </button>
                    <button class="btn btn-outline-gray w-full justify-start">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        View Activity Log
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div x-show="toast.visible" x-transition
        class="fixed bottom-4 right-4 z-50 max-w-sm w-full bg-white shadow-lg rounded-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-hidden">
        <div class="p-4">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <svg x-show="toast.type === 'success'" class="h-6 w-6 text-green-400" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <svg x-show="toast.type === 'error'" class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="ml-3 w-0 flex-1 pt-0.5">
                    <p class="text-sm font-medium text-gray-900" x-text="toast.message"></p>
                </div>
                <div class="ml-4 flex-shrink-0 flex">
                    <button @click="toast.visible = false"
                        class="bg-white rounded-md inline-flex text-gray-400 hover:text-gray-500">
                        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd"
                                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('userProfile', () => ({
                profile: {
                    firstName: '${user?.firstName || ""}',
                    lastName: '${user?.lastName || ""}',
                    email: '${user?.email || ""}',
                    phoneNumber: '${user?.phoneNumber || ""}',
                    role: '${user?.role || "ADMIN"}',
                    lastLogin: '${user?.lastLogin || new Date().toISOString()}',
                    createdAt: '${user?.createdAt || new Date().toISOString()}'
                },
                password: {
                    current: '',
                    new: '',
                    confirm: ''
                },
                saving: false,
                changingPassword: false,
                toast: {
                    visible: false,
                    type: 'success',
                    message: ''
                },

                getInitials() {
                    return (this.profile.firstName?.charAt(0) || '') + (this.profile.lastName?.charAt(0) || '');
                },

                formatDate(dateString) {
                    if (!dateString) return 'N/A';
                    return new Date(dateString).toLocaleDateString();
                },

                async saveProfile() {
                    this.saving = true;
                    try {
                        const response = await fetch('/api/profile', {
                            method: 'PUT',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(this.profile)
                        });

                        if (!response.ok) throw new Error('Failed to save');

                        this.showToast('success', 'Profile updated successfully');
                    } catch (error) {
                        this.showToast('error', 'Failed to update profile');
                    } finally {
                        this.saving = false;
                    }
                },

                async changePassword() {
                    if (this.password.new !== this.password.confirm) {
                        this.showToast('error', 'Passwords do not match');
                        return;
                    }

                    this.changingPassword = true;
                    try {
                        const response = await fetch('/api/profile/password', {
                            method: 'PUT',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                currentPassword: this.password.current,
                                newPassword: this.password.new
                            })
                        });

                        if (!response.ok) throw new Error('Failed to change password');

                        this.showToast('success', 'Password changed successfully');
                        this.resetPassword();
                    } catch (error) {
                        this.showToast('error', 'Failed to change password');
                    } finally {
                        this.changingPassword = false;
                    }
                },

                resetProfile() {
                    location.reload();
                },

                resetPassword() {
                    this.password = { current: '', new: '', confirm: '' };
                },

                showToast(type, message) {
                    this.toast.type = type;
                    this.toast.message = message;
                    this.toast.visible = true;
                    setTimeout(() => this.toast.visible = false, 3000);
                }
            }));
        });
    </script>
    ` }) %>