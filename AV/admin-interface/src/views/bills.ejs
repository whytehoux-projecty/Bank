        <div class="card p-6 border-l-4 border-blue-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">Internet/TV</p>
                    <h3 class="text-2xl font-bold text-navy-900" x-text="stats.internet">0</h3>
                </div>
                <div class="h-12 w-12 rounded-full bg-blue-100 flex items-center justify-center text-blue-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0">
                        </path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="card p-6 border-l-4 border-emerald-500">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">Insurance</p>
                    <h3 class="text-2xl font-bold text-navy-900" x-text="stats.insurance">0</h3>
                </div>
                <div class="h-12 w-12 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z">
                        </path>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
            <div class="md:col-span-5 relative">
                <input type="text" x-model="filters.search" @input.debounce.500ms="loadBillPayees()"
                    placeholder="Search by user email or payee name..." class="form-input pl-10">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            <div class="md:col-span-5">
                <select x-model="filters.category" @change="loadBillPayees()" class="form-select w-full">
                    <option value="">All Categories</option>
                    <option value="UTILITIES">Utilities</option>
                    <option value="INTERNET">Internet/TV</option>
                    <option value="INSURANCE">Insurance</option>
                    <option value="OTHER">Other</option>
                </select>
            </div>
            <div class="md:col-span-2">
                <button @click="resetFilters()" class="btn btn-ghost w-full" title="Reset Filters">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                        </path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Bill Payees Table -->
    <div class="card overflow-hidden">
        <div class="overflow-x-auto">
            <table class="table w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Payee
                            Name</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Account
                            Number</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                            Category</th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">User
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">Created
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <template x-if="loading">
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center">
                                <div class="flex justify-center">
                                    <div class="spinner"></div>
                                </div>
                                <p class="mt-2 text-sm text-gray-500">Loading bill payees...</p>
                            </td>
                        </tr>
                    </template>

                    <template x-if="!loading && billPayees.length === 0">
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center text-gray-400">
                                    <svg class="h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                                        </path>
                                    </svg>
                                    <p class="text-lg font-medium text-gray-900">No bill payees found</p>
                                    <p class="text-sm">Try adjusting your search or filters</p>
                                </div>
                            </td>
                        </tr>
                    </template>

                    <template x-for="payee in billPayees" :key="payee.id">
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm font-semibold text-navy-900" x-text="payee.name"></span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <code class="text-sm font-mono text-gray-600" x-text="payee.accountNumber"></code>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                    :class="{
                                    'bg-amber-100 text-amber-800': payee.category === 'UTILITIES',
                                    'bg-blue-100 text-blue-800': payee.category === 'INTERNET',
                                    'bg-emerald-100 text-emerald-800': payee.category === 'INSURANCE',
                                    'bg-gray-100 text-gray-800': payee.category === 'OTHER'
                                }">
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                        x-show="payee.category === 'UTILITIES'">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                    </svg>
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                        x-show="payee.category === 'INTERNET'">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0">
                                        </path>
                                    </svg>
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                        x-show="payee.category === 'INSURANCE'">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z">
                                        </path>
                                    </svg>
                                    <span x-text="payee.category"></span>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-semibold text-navy-900"
                                    x-text="payee.user?.firstName + ' ' + payee.user?.lastName"></div>
                                <div class="text-xs text-gray-500" x-text="payee.user?.email"></div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"
                                x-text="new Date(payee.createdAt).toLocaleDateString()"></td>
                        </tr>
                    </template>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-between"
            x-show="pagination.pages > 1">
            <span class="text-sm text-gray-500">
                Showing <span x-text="(pagination.page - 1) * pagination.limit + 1"></span> to <span
                    x-text="Math.min(pagination.page * pagination.limit, pagination.total)"></span> of <span
                    x-text="pagination.total"></span> results
            </span>
            <div class="flex gap-2">
                <button @click="changePage(pagination.page - 1)" :disabled="pagination.page <= 1"
                    class="btn btn-sm btn-ghost">Previous</button>
                <button @click="changePage(pagination.page + 1)" :disabled="pagination.page >= pagination.pages"
                    class="btn btn-sm btn-ghost">Next</button>
            </div>
        </div>
    </div>
    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('billPayeeManagement', () => ({
                billPayees: [],
                loading: true,
                stats: { total: 0, utilities: 0, internet: 0, insurance: 0 },
                filters: { search: '', category: '' },
                pagination: { page: 1, limit: 20, total: 0, pages: 0 },

                init() {
                    this.loadBillPayees();
                },

                async loadBillPayees(page = 1) {
                    this.loading = true;
                    this.pagination.page = page;
                    try {
                        const params = new URLSearchParams({
                            page: page.toString(),
                            limit: this.pagination.limit.toString()
                        });
                        if (this.filters.category) params.append('category', this.filters.category);

                        const response = await fetch('/api/bill-payees?' + params.toString());
                        if (!response.ok) throw new Error('Failed to fetch');

                        const data = await response.json();
                        this.billPayees = data.billPayees || [];
                        this.pagination = data.pagination || this.pagination;
                        this.updateStats();
                    } catch (error) {
                        console.error('Error loading bill payees:', error);
                        this.billPayees = [];
                    } finally {
                        this.loading = false;
                    }
                },

                updateStats() {
                    this.stats.total = this.pagination.total || this.billPayees.length;
                    this.stats.utilities = this.billPayees.filter(p => p.category === 'UTILITIES').length;
                    this.stats.internet = this.billPayees.filter(p => p.category === 'INTERNET').length;
                    this.stats.insurance = this.billPayees.filter(p => p.category === 'INSURANCE').length;
                },

                changePage(newPage) {
                    if (newPage >= 1 && newPage <= this.pagination.pages) {
                        this.loadBillPayees(newPage);
                    }
                },

                resetFilters() {
                    this.filters = { search: '', category: '' };
                    this.loadBillPayees();
                }
            }));
        });
    </script>
    ` }) %>