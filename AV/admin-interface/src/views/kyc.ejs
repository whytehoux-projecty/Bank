<%- include('partials/header', { title: 'KYC Review' , pagePath: '/kyc-docs' }) %>

    <div x-data="kycManagement()">
        <!-- Header -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
            <div>
                <!-- Title via layout -->
                <p class="text-gray-500 mt-1">Review and approve user identity documents.</p>
            </div>
            <div class="flex gap-2">
                <button @click="loadPendingKYC()" class="btn btn-ghost text-gray-500 hover:text-navy-900"
                    title="Refresh">
                    <svg class="w-5 h-5 animate-spin-reverse" :class="{'animate-spin': loading}" fill="none"
                        stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                        </path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Stats Overview -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="card p-6 flex items-center">
                <div class="p-3 rounded-full bg-amber-100 text-amber-600 mr-4">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500">Pending Review</p>
                    <p class="text-2xl font-bold text-navy-900" x-text="stats.pending">0</p>
                </div>
            </div>
            <div class="card p-6 flex items-center">
                <div class="p-3 rounded-full bg-emerald-100 text-emerald-600 mr-4">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500">Verified Today</p>
                    <p class="text-2xl font-bold text-navy-900" x-text="stats.verifiedToday">0</p>
                </div>
            </div>
            <div class="card p-6 flex items-center">
                <div class="p-3 rounded-full bg-red-100 text-red-600 mr-4">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-medium text-gray-500">Rejected Today</p>
                    <p class="text-2xl font-bold text-navy-900" x-text="stats.rejectedToday">0</p>
                </div>
            </div>
        </div>

        <!-- Pending KYC List -->
        <div class="card overflow-hidden">
            <div class="card-header bg-white border-b border-gray-100 py-4 px-6 flex items-center justify-between">
                <h3 class="text-base font-bold text-navy-900 flex items-center">
                    <span class="flex h-2 w-2 relative mr-3">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-400 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-amber-500"></span>
                    </span>
                    Pending KYC Applications
                </h3>
            </div>

            <div class="overflow-x-auto">
                <table class="table w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Date
                                Submitted</th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                User
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Email
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Status
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">
                                Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <template x-if="loading">
                            <tr>
                                <td colspan="5" class="px-6 py-12 text-center">
                                    <div class="flex justify-center">
                                        <div class="spinner"></div>
                                    </div>
                                    <p class="mt-2 text-sm text-gray-500">Loading applications...</p>
                                </td>
                            </tr>
                        </template>

                        <template x-if="!loading && users.length === 0">
                            <tr>
                                <td colspan="5" class="px-6 py-12 text-center">
                                    <div class="flex flex-col items-center justify-center text-gray-400">
                                        <svg class="h-12 w-12 mb-3" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <p class="text-lg font-medium text-gray-900">No pending KYC applications</p>
                                        <p class="text-sm">All identity verifications are up to date.</p>
                                    </div>
                                </td>
                            </tr>
                        </template>

                        <template x-for="user in users" :key="user.id">
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"
                                    x-text="new Date(user.createdAt).toLocaleDateString()"></td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div
                                            class="h-8 w-8 rounded-full bg-navy-100 text-navy-700 flex items-center justify-center font-bold text-xs mr-3">
                                            <span x-text="user.firstName.charAt(0) + user.lastName.charAt(0)"></span>
                                        </div>
                                        <span class="text-sm font-semibold text-navy-900"
                                            x-text="user.firstName + ' ' + user.lastName"></span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600" x-text="user.email"></td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span
                                        class="px-2 py-1 text-xs font-semibold rounded-full bg-amber-100 text-amber-800">
                                        Pending Review
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <button @click="openReview(user)" class="btn btn-sm btn-primary">Review
                                        Documents</button>
                                </td>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between"
                x-show="pagination.total > 0">
                <span class="text-sm text-gray-500">
                    Showing <span x-text="(pagination.page - 1) * pagination.limit + 1"></span> to <span
                        x-text="Math.min(pagination.page * pagination.limit, pagination.total)"></span> of <span
                        x-text="pagination.total"></span> results
                </span>
                <div class="flex gap-2">
                    <button @click="changePage(pagination.page - 1)" :disabled="pagination.page <= 1"
                        class="btn btn-sm btn-outline-gray">Previous</button>
                    <button @click="changePage(pagination.page + 1)" :disabled="pagination.page >= pagination.pages"
                        class="btn btn-sm btn-outline-gray">Next</button>
                </div>
            </div>
        </div>

        <!-- Review Modal -->
        <div x-show="showModal" class="modal-overlay" style="display: none;">
            <div class="modal">
                <div class="modal-content max-w-4xl" @click.away="closeModal()">
                    <div class="modal-header flex justify-between items-center bg-navy-900 text-white rounded-t-xl">
                        <h3 class="text-xl font-display font-bold">Review Identity Documents</h3>
                        <button @click="closeModal()" class="text-gray-400 hover:text-white">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>

                    <div class="modal-body p-0">
                        <div class="grid grid-cols-1 md:grid-cols-2 h-[600px]">
                            <!-- Left: User Details & Decision -->
                            <div class="p-6 border-r border-gray-100 bg-gray-50 overflow-y-auto">
                                <template x-if="selectedUser">
                                    <div>
                                        <div class="flex items-center mb-6">
                                            <div
                                                class="h-12 w-12 rounded-full bg-navy-900 text-gold-500 flex items-center justify-center font-bold text-lg mr-4 border-2 border-gold-500">
                                                <span
                                                    x-text="selectedUser.firstName.charAt(0) + selectedUser.lastName.charAt(0)"></span>
                                            </div>
                                            <div>
                                                <h4 class="text-lg font-bold text-navy-900"
                                                    x-text="selectedUser.firstName + ' ' + selectedUser.lastName"></h4>
                                                <p class="text-sm text-gray-500" x-text="selectedUser.email"></p>
                                            </div>
                                        </div>

                                        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 mb-6">
                                            <h5 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-3">
                                                Submitted Information</h5>
                                            <div class="space-y-3">
                                                <div class="grid grid-cols-2 gap-4">
                                                    <div>
                                                        <p class="text-xs text-gray-400">Address</p>
                                                        <p class="text-sm text-navy-900 font-medium h-20 overflow-y-auto"
                                                            x-text="formatAddress(selectedUser.address) || 'No address provided'">
                                                        </p>
                                                    </div>
                                                    <div>
                                                        <p class="text-xs text-gray-400">Phone</p>
                                                        <p class="text-sm text-navy-900 font-medium"
                                                            x-text="selectedUser.phoneNumber || 'N/A'"></p>

                                                        <p class="text-xs text-gray-400 mt-2">Date of Birth</p>
                                                        <p class="text-sm text-navy-900 font-medium"
                                                            x-text="selectedUser.dateOfBirth ? new Date(selectedUser.dateOfBirth).toLocaleDateString() : 'N/A'">
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div>
                                            <label class="form-label">Review Notes</label>
                                            <textarea x-model="reviewNotes" class="form-input" rows="4"
                                                placeholder="Add rationale for approval or rejection..."></textarea>
                                            <p class="text-xs text-gray-500 mt-1">These notes will be saved to the audit
                                                log.</p>
                                        </div>
                                    </div>
                                </template>
                            </div>

                            <!-- Right: Document Preview -->
                            <div class="p-6 bg-navy-900/5 flex flex-col">
                                <h4 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-4">Submitted
                                    Documents</h4>

                                <!-- Document Tabs if multiple -->
                                <div class="flex gap-2 mb-4 overflow-x-auto pb-2"
                                    x-show="selectedUser && selectedUser.kycDocuments && selectedUser.kycDocuments.length > 0">
                                    <template x-for="(doc, index) in (selectedUser?.kycDocuments || [])" :key="doc.id">
                                        <button @click="currentDocIndex = index"
                                            class="px-3 py-1.5 text-xs font-medium rounded-full transition-colors whitespace-nowrap"
                                            :class="currentDocIndex === index ? 'bg-navy-900 text-white' : 'bg-white text-gray-600 border border-gray-200 hover:bg-gray-50'">
                                            <span x-text="doc.type || 'Document ' + (index + 1)"></span>
                                        </button>
                                    </template>
                                </div>

                                <div
                                    class="flex-1 bg-white border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center p-4 relative overflow-hidden group">
                                    <template
                                        x-if="!selectedUser || !selectedUser.kycDocuments || selectedUser.kycDocuments.length === 0">
                                        <div class="text-center text-gray-400">
                                            <svg class="w-12 h-12 mx-auto mb-2" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z">
                                                </path>
                                            </svg>
                                            <p>No documents uploaded yet</p>
                                        </div>
                                    </template>

                                    <template
                                        x-if="selectedUser && selectedUser.kycDocuments && selectedUser.kycDocuments.length > 0">
                                        <div class="w-full h-full flex flex-col items-center justify-center">
                                            <!-- Placeholder for actual document preview -->
                                            <div
                                                class="h-32 w-32 bg-gray-100 rounded flex items-center justify-center mb-4 text-gray-400">
                                                <svg class="w-16 h-16" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                                                    </path>
                                                </svg>
                                            </div>
                                            <p class="font-medium text-navy-900 mb-1"
                                                x-text="selectedUser.kycDocuments[currentDocIndex].type"></p>
                                            <p class="text-xs text-gray-500 mb-6"
                                                x-text="(selectedUser.kycDocuments[currentDocIndex].filePath || '').split('/').pop()">
                                            </p>

                                            <a href="#" class="btn btn-outline-primary"
                                                @click.prevent="alert('Download demo')">
                                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4">
                                                    </path>
                                                </svg>
                                                View Original
                                            </a>
                                        </div>
                                    </template>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div
                        class="modal-footer bg-gray-50 flex justify-between items-center rounded-b-xl border-t border-gray-200 p-4">
                        <button @click="closeModal()" class="btn btn-ghost">Cancel</button>
                        <div class="flex gap-2">
                            <button @click="submitDecision('REJECTED')" class="btn btn-danger" :disabled="processing">
                                <span x-show="processing" class="spinner w-4 h-4 mr-2 border-white"></span>
                                Reject
                            </button>
                            <button @click="submitDecision('VERIFIED')" class="btn btn-success" :disabled="processing">
                                <span x-show="processing" class="spinner w-4 h-4 mr-2 border-white"></span>
                                Approve & Verify
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('kycManagement', () => ({
                users: [],
                loading: true,
                pagination: { page: 1, limit: 10, total: 0, pages: 0 },
                showModal: false,
                selectedUser: null,
                currentDocIndex: 0,
                reviewNotes: '',
                processing: false,
                stats: {
                    pending: 0,
                    verifiedToday: 0,
                    rejectedToday: 0
                },

                init() {
                    this.loadPendingKYC();
                },

                async loadPendingKYC(page = 1) {
                    this.loading = true;
                    this.pagination.page = page;
                    try {
                        // Fetch pending KYC users
                        const res = await fetch(`/api/admin/users?kycStatus=PENDING&page=${page}&limit=${this.pagination.limit}`);
                        if (res.ok) {
                            const data = await res.json();
                            this.users = data.users || [];
                            this.pagination = data.pagination || this.pagination;
                            this.stats.pending = data.pagination.total; // Approximate
                        }
                    } catch (error) {
                        console.error('Error fetching KYC users:', error);
                    } finally {
                        this.loading = false;
                    }
                },

                changePage(newPage) {
                    if (newPage >= 1 && newPage <= this.pagination.pages) {
                        this.loadPendingKYC(newPage);
                    }
                },

                async openReview(user) {
                    // Fetch full user details including docs
                    this.processing = true;
                    try {
                        const res = await fetch(`/api/admin/users/${user.id}`);
                        if (res.ok) {
                            const data = await res.json();
                            this.selectedUser = data.user;
                            this.currentDocIndex = 0;
                            this.reviewNotes = '';
                            this.showModal = true;
                        }
                    } catch (e) {
                        alert('Failed to load user details');
                    } finally {
                        this.processing = false;
                    }
                },

                closeModal() {
                    this.showModal = false;
                    this.selectedUser = null;
                },

                formatAddress(addr) {
                    if (!addr) return '';
                    return [addr.street, addr.city, addr.state, addr.postalCode, addr.country].filter(Boolean).join(', ');
                },

                async submitDecision(status) {
                    if (!this.selectedUser) return;
                    if (!confirm(`Are you sure you want to mark this user as ${status}?`)) return;

                    this.processing = true;
                    try {
                        const res = await fetch(`/api/admin/users/${this.selectedUser.id}/kyc-status`, {
                            method: 'PUT',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                kycStatus: status,
                                reviewNotes: this.reviewNotes
                            })
                        });

                        if (res.ok) {
                            this.closeModal();
                            this.loadPendingKYC(this.pagination.page);
                            alert('Status updated successfully');
                        } else {
                            const err = await res.json();
                            alert('Error: ' + (err.message || 'Update failed'));
                        }
                    } catch (error) {
                        alert('Failed to process request: ' + error.message);
                    } finally {
                        this.processing = false;
                    }
                }
            }));
        });
    </script>

    <%- include('partials/footer') %>