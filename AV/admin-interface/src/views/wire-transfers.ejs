<%- include('partials/header', { title: 'Wire Transfers' , pagePath: '/wire-transfers' }) %>

    <div x-data="wireTransferManagement()">
        <!-- Header -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
            <div>
                <!-- Title via layout -->
                <p class="text-gray-500 mt-1">Manage incoming and outgoing wire transfers.</p>
            </div>
            <div class="flex gap-2">
                <button @click="loadTransfers()" class="btn btn-ghost text-gray-500 hover:text-navy-900"
                    title="Refresh">
                    <svg class="w-5 h-5" :class="{'animate-spin': loading}" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                        </path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="card p-6 border-l-4 border-gold-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">Total Transfers</p>
                        <h3 class="text-2xl font-bold text-navy-900" x-text="stats.total">0</h3>
                    </div>
                    <div class="h-12 w-12 rounded-full bg-gold-100 flex items-center justify-center text-gold-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="card p-6 border-l-4 border-emerald-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">Total Volume</p>
                        <h3 class="text-2xl font-bold text-navy-900" x-text="'$' + stats.volume.toLocaleString()">$0
                        </h3>
                    </div>
                    <div
                        class="h-12 w-12 rounded-full bg-emerald-100 flex items-center justify-center text-emerald-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                            </path>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="card p-6 border-l-4 border-amber-500">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">Pending Review</p>
                        <h3 class="text-2xl font-bold text-navy-900" x-text="stats.pending">0</h3>
                    </div>
                    <div class="h-12 w-12 rounded-full bg-amber-100 flex items-center justify-center text-amber-600">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="card p-6 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
                <div class="md:col-span-4 relative">
                    <input type="text" x-model="filters.search" @input.debounce.500ms="loadTransfers()"
                        placeholder="Search by reference or user..." class="form-input pl-10">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                </div>
                <div class="md:col-span-3">
                    <select x-model="filters.status" @change="loadTransfers()" class="form-select w-full">
                        <option value="">All Statuses</option>
                        <option value="PENDING">Pending</option>
                        <option value="APPROVED">Approved</option>
                        <option value="REJECTED">Rejected</option>
                        <option value="COMPLETED">Completed</option>
                    </select>
                </div>
                <div class="md:col-span-3">
                    <select x-model="filters.type" @change="loadTransfers()" class="form-select w-full">
                        <option value="">All Types</option>
                        <option value="INCOMING">Incoming</option>
                        <option value="OUTGOING">Outgoing</option>
                    </select>
                </div>
                <div class="md:col-span-2">
                    <button @click="resetFilters()" class="btn btn-ghost w-full" title="Reset Filters">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                            </path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Transfers Table -->
        <div class="card overflow-hidden">
            <div class="overflow-x-auto">
                <table class="table w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Reference</th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Type
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                User
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">
                                Amount
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Beneficiary</th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Status
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Date
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">
                                Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <template x-if="loading">
                            <tr>
                                <td colspan="8" class="px-6 py-12 text-center">
                                    <div class="flex justify-center">
                                        <div class="spinner"></div>
                                    </div>
                                    <p class="mt-2 text-sm text-gray-500">Loading transfers...</p>
                                </td>
                            </tr>
                        </template>

                        <template x-if="!loading && transfers.length === 0">
                            <tr>
                                <td colspan="8" class="px-6 py-12 text-center">
                                    <div class="flex flex-col items-center justify-center text-gray-400">
                                        <svg class="h-12 w-12 mb-3" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                                        </svg>
                                        <p class="text-lg font-medium text-gray-900">No wire transfers found</p>
                                        <p class="text-sm">Try adjusting your search or filters</p>
                                    </div>
                                </td>
                            </tr>
                        </template>

                        <template x-for="transfer in transfers" :key="transfer.id">
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm font-mono text-navy-900" x-text="transfer.reference"></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span
                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                        :class="transfer.type === 'INCOMING' ? 'bg-emerald-100 text-emerald-800' : 'bg-blue-100 text-blue-800'"
                                        x-text="transfer.type"></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-semibold text-navy-900"
                                        x-text="transfer.user?.firstName + ' ' + transfer.user?.lastName"></div>
                                    <div class="text-xs text-gray-500" x-text="transfer.user?.email"></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right">
                                    <span class="text-sm font-bold text-navy-900"
                                        x-text="'$' + parseFloat(transfer.amount).toLocaleString()"></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900" x-text="transfer.beneficiaryName"></div>
                                    <div class="text-xs text-gray-500 font-mono" x-text="transfer.beneficiaryAccount">
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span
                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                        :class="{
                                    'bg-emerald-100 text-emerald-800': transfer.status === 'APPROVED' || transfer.status === 'COMPLETED',
                                    'bg-amber-100 text-amber-800': transfer.status === 'PENDING',
                                    'bg-ruby-100 text-ruby-800': transfer.status === 'REJECTED'
                                }" x-text="transfer.status"></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"
                                    x-text="new Date(transfer.createdAt).toLocaleDateString()"></td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <button @click="viewDetails(transfer)"
                                        class="text-gray-400 hover:text-navy-900 transition-colors"
                                        title="View Details">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                                            </path>
                                        </svg>
                                    </button>
                                </td>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('wireTransferManagement', () => ({
                transfers: [],
                loading: true,
                stats: { total: 0, volume: 0, pending: 0 },
                filters: { search: '', status: '', type: '' },

                init() {
                    this.loadTransfers();
                },

                async loadTransfers() {
                    this.loading = true;
                    try {
                        const params = new URLSearchParams();
                        if (this.filters.search) params.append('search', this.filters.search);
                        if (this.filters.status) params.append('status', this.filters.status);
                        if (this.filters.type) params.append('type', this.filters.type);

                        const response = await fetch('/api/wire-transfers?' + params.toString());
                        if (!response.ok) throw new Error('Failed to fetch');

                        const data = await response.json();
                        this.transfers = data.transfers || [];
                        this.updateStats();
                    } catch (error) {
                        console.error('Error fetching wire transfers:', error);
                        // Mock data for demo
                        this.transfers = [
                            {
                                id: '1',
                                reference: 'WTR-2024-001',
                                type: 'INCOMING',
                                user: { firstName: 'John', lastName: 'Doe', email: 'john@example.com' },
                                amount: 50000,
                                beneficiaryName: 'ACME Corp',
                                beneficiaryAccount: 'GB29NWBK60161331926819',
                                status: 'PENDING',
                                createdAt: new Date().toISOString()
                            }
                        ];
                        this.updateStats();
                    } finally {
                        this.loading = false;
                    }
                },

                updateStats() {
                    this.stats.total = this.transfers.length;
                    this.stats.volume = this.transfers.reduce((sum, t) => sum + parseFloat(t.amount), 0);
                    this.stats.pending = this.transfers.filter(t => t.status === 'PENDING').length;
                },

                resetFilters() {
                    this.filters = { search: '', status: '', type: '' };
                    this.loadTransfers();
                },

                viewDetails(transfer) {
                    alert('Transfer Details: ' + JSON.stringify(transfer, null, 2));
                }
            }));
        });
    </script>
    <%- include('partials/footer') %>