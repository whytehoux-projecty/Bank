<%- include('partials/header', { title: 'Card Management' , pagePath: '/cards' }) %>

    <div x-data="cardManagement()">
        <!-- Header -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
            <div>
                <p class="text-gray-500 mt-1">Manage user debit and credit cards</p>
            </div>
            <div class="flex gap-2">
                <button @click="loadCards()" class="btn btn-ghost text-gray-500 hover:text-navy-900" title="Refresh">
                    <svg class="w-5 h-5" :class="{'animate-spin': loading}" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                        </path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <%- include('partials/stat-card', { title: 'Total Cards' , valueExpr: 'stats.total' , color: 'gold' , icon:
                `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>`
                }) %>

                <%- include('partials/stat-card', { title: 'Active Cards' , valueExpr: 'stats.active' , color: 'emerald'
                    , icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>`
                    }) %>

                    <%- include('partials/stat-card', { title: 'Frozen Cards' , valueExpr: 'stats.frozen' ,
                        color: 'amber' , icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>`
                        }) %>

                        <%- include('partials/stat-card', { title: 'Blocked Cards' , valueExpr: 'stats.blocked' ,
                            color: 'ruby' , icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor"
                            viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636">
                            </path>
                            </svg>`
                            }) %>
        </div>

        <!-- Filters -->
        <div class="card p-6 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
                <div class="md:col-span-4 relative">
                    <input type="text" x-model="filters.search" @input.debounce.500ms="loadCards()"
                        placeholder="Search by user email..." class="form-input pl-10">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                </div>
                <div class="md:col-span-3">
                    <select x-model="filters.status" @change="loadCards()" class="form-select w-full">
                        <option value="">All Statuses</option>
                        <option value="ACTIVE">Active</option>
                        <option value="FROZEN">Frozen</option>
                        <option value="BLOCKED">Blocked</option>
                    </select>
                </div>
                <div class="md:col-span-3">
                    <select x-model="filters.type" @change="loadCards()" class="form-select w-full">
                        <option value="">All Types</option>
                        <option value="DEBIT">Debit</option>
                        <option value="CREDIT">Credit</option>
                    </select>
                </div>
                <div class="md:col-span-2">
                    <button @click="resetFilters()" class="btn btn-ghost w-full" title="Reset Filters">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                            </path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Cards Table -->
        <div class="card overflow-hidden">
            <div class="overflow-x-auto">
                <table class="table w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Card
                                Number</th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                User
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Type
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Network
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Status
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-right">
                                Daily
                                Limit</th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Expiry
                            </th>
                            <th class="px-6 py-4 text-xs font-bold text-gray-500 uppercase tracking-wider text-left">
                                Created
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <template x-if="loading">
                            <tr>
                                <td colspan="8" class="px-6 py-12 text-center">
                                    <div class="flex justify-center">
                                        <div class="spinner"></div>
                                    </div>
                                    <p class="mt-2 text-sm text-gray-500">Loading cards...</p>
                                </td>
                            </tr>
                        </template>

                        <template x-if="!loading && cards.length === 0">
                            <tr>
                                <td colspan="8" class="px-6 py-12 text-center">
                                    <div class="flex flex-col items-center justify-center text-gray-400">
                                        <svg class="h-12 w-12 mb-3" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z">
                                            </path>
                                        </svg>
                                        <p class="text-lg font-medium text-gray-900">No cards found</p>
                                        <p class="text-sm">Try adjusting your search or filters</p>
                                    </div>
                                </td>
                            </tr>
                        </template>

                        <template x-for="card in cards" :key="card.id">
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <code class="text-sm font-mono text-navy-900"
                                        x-text="'**** **** **** ' + card.cardNumber.slice(-4)"></code>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-semibold text-navy-900"
                                        x-text="card.account?.user?.firstName + ' ' + card.account?.user?.lastName">
                                    </div>
                                    <div class="text-xs text-gray-500" x-text="card.account?.user?.email"></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span
                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"
                                        x-text="card.cardType"></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900" x-text="card.network">
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span
                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                                        :class="{
                                    'bg-emerald-100 text-emerald-800': card.status === 'ACTIVE',
                                    'bg-amber-100 text-amber-800': card.status === 'FROZEN',
                                    'bg-ruby-100 text-ruby-800': card.status === 'BLOCKED'
                                }" x-text="card.status"></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium text-navy-900"
                                    x-text="'$' + parseFloat(card.dailyLimit).toLocaleString()"></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"
                                    x-text="new Date(card.expiryDate).toLocaleDateString()"></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"
                                    x-text="new Date(card.createdAt).toLocaleDateString()"></td>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-between"
                x-show="pagination.pages > 1">
                <span class="text-sm text-gray-500">
                    Showing <span x-text="(pagination.page - 1) * pagination.limit + 1"></span> to <span
                        x-text="Math.min(pagination.page * pagination.limit, pagination.total)"></span> of <span
                        x-text="pagination.total"></span> results
                </span>
                <div class="flex gap-2">
                    <button @click="changePage(pagination.page - 1)" :disabled="pagination.page <= 1"
                        class="btn btn-sm btn-ghost">Previous</button>
                    <button @click="changePage(pagination.page + 1)" :disabled="pagination.page >= pagination.pages"
                        class="btn btn-sm btn-ghost">Next</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('cardManagement', () => ({
                cards: [],
                loading: true,
                stats: { total: 0, active: 0, frozen: 0, blocked: 0 },
                filters: { search: '', status: '', type: '' },
                pagination: { page: 1, limit: 20, total: 0, pages: 0 },

                init() {
                    this.loadCards();
                },

                async loadCards(page = 1) {
                    this.loading = true;
                    this.pagination.page = page;
                    try {
                        const params = new URLSearchParams({
                            page: page.toString(),
                            limit: this.pagination.limit.toString()
                        });
                        if (this.filters.status) params.append('status', this.filters.status);
                        if (this.filters.type) params.append('cardType', this.filters.type);

                        const response = await fetch('/api/cards?' + params.toString());
                        if (!response.ok) throw new Error('Failed to fetch');

                        const data = await response.json();
                        this.cards = data.cards || [];
                        this.pagination = data.pagination || this.pagination;
                        this.updateStats();
                    } catch (error) {
                        console.error('Error loading cards:', error);
                        this.cards = [];
                    } finally {
                        this.loading = false;
                    }
                },

                updateStats() {
                    this.stats.total = this.pagination.total || this.cards.length;
                    this.stats.active = this.cards.filter(c => c.status === 'ACTIVE').length;
                    this.stats.frozen = this.cards.filter(c => c.status === 'FROZEN').length;
                    this.stats.blocked = this.cards.filter(c => c.status === 'BLOCKED').length;
                },

                changePage(newPage) {
                    if (newPage >= 1 && newPage <= this.pagination.pages) {
                        this.loadCards(newPage);
                    }
                },

                resetFilters() {
                    this.filters = { search: '', status: '', type: '' };
                    this.loadCards();
                }
            }));
        });
    </script>
    <%- include('partials/footer') %>